	<select id="popularplayclick" resultType="PlaylistClickVo">
		<![CDATA[
			select playlist_no playlistNo,
			       playlist_name playlistName,
			       emo_no emoNo,
			       user_no userNo,
			       nickname
			from (select rownum rn,
			           playlist_no,
			           playlist_name,
			           emo_no,
			           user_no,
			           nickname,
			           likeCnt
			    from (select p.playlist_no,
			                   p.playlist_name,
			                   p.user_no,
			                   p.emo_no,
			                   u.nickname,
			                   up.likeCnt
			            from playlist p, users u, (select playlist_no,
			                                               count(user_no) likeCnt
			                                        from user_playlist
			                                        group by playlist_no) up
			            where p.user_no = u.user_no
			            and up.playlist_no = p.playlist_no
			            order by likeCnt desc))
			where rn between 1 and 10		
		]]>
	</select>
	
